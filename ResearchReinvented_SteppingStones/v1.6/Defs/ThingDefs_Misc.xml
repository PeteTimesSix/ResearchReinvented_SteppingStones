<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>RR_VoltaicPile</defName>
    <label>voltaic pile</label>
    <description>A crude but effective means of generating small amounts of electricity. Nonrechargeable.\n\nWhile the metals and electrolytes used vary between designs, all voltaic piles function by harnessing chemically-induced electrical potential between two electrodes.</description>
    <thingClass>Building</thingClass>
    <size>(1,1)</size>
    <graphicData>
      <texPath>RRSS/Things/voltaic_pile</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.5</fillPercent>
    <pathCost>30</pathCost>
    <rotatable>false</rotatable>
    <blockWind>false</blockWind>
    <castEdgeShadows>false</castEdgeShadows>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>1000</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Beauty>-10</Beauty>
    </statBases>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
    <tickerType>Normal</tickerType>
    <canOverlapZones>true</canOverlapZones>
    <building>
      <destroySound>BuildingDestroyed_Metal_Small</destroySound>
    </building>
    <costList>
      <Steel>40</Steel>
      <RawBerries>40</RawBerries>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerPlant</compClass>
        <basePowerConsumption>-200</basePowerConsumption>
        <transmitsPower>true</transmitsPower>
      </li>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>20.0</fuelConsumptionRate>
        <fuelCapacity>100.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
          </thingDefs>
        </fuelFilter>
        <initialFuelPercent>1</initialFuelPercent>
        <showAllowAutoRefuelToggle>false</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_Styleable" />
    </comps>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Power</designationCategory>
    <uiOrder>2100</uiOrder>
    <constructEffect>ConstructMetal</constructEffect>
    <researchPrerequisites>
      <li>RR_ElectricityBasics</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>3</constructionSkillPrerequisite>
  </ThingDef>

  <ThingDef ParentName="BaseMeleeWeapon_Blunt">
    <defName>RR_Weapon_Torch</defName>
    <label>torch</label>
    <description>Wood from trees or other fibrous plants, wrapped in cloth and soaked in a flammable substance. Can be used as a weapon in a pinch.</description>
    <graphicData>
      <texPath>Things/Building/Misc/TorchLamp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.1</uiIconScale>
    <techLevel>Neolithic</techLevel>
    <weaponTags>
      <li>NeolithicMeleeBasic</li>
    </weaponTags>
    <weaponClasses>
      <li>Neolithic</li>
    </weaponClasses>
    <statBases>
      <WorkToMake>1200</WorkToMake>
      <Mass>1</Mass>
    </statBases>
    <equippedAngleOffset>-10</equippedAngleOffset>
    <costList>
      <WoodLog>1</WoodLog>
      <Cloth>10</Cloth>
      <Chemfuel>5</Chemfuel>
    </costList>
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
    <researchPrerequisites>
      <li>RR_IncendiaryWeapons</li>
    </researchPrerequisites>
      <displayPriority>300</displayPriority>
    </recipeMaker>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>head</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
        <extraMeleeDamages>
          <li>
            <def>Flame</def>
            <amount>2</amount>
            <chance>0.25</chance>
          </li>
        </extraMeleeDamages>
      </li>
    </tools>
		<tickerType>Normal</tickerType>
    <comps>
      <li Class="PeteTimesSix.ResearchReinvented_SteppingStones.Comps.CompProperties_CarriedGlower">
        <glowerProps>
          <glowColor>(255,136,83,0)</glowColor>
          <glowRadius>4.49</glowRadius>
          <overlightRadius>1.49</overlightRadius>
        </glowerProps>
      </li>
    </comps>
  </ThingDef>

</Defs>
